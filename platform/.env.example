# OneDettyDecember Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/onedettydecember?schema=public"

# ============================================
# SUPABASE
# ============================================
NEXT_PUBLIC_SUPABASE_URL="your-project-url.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ============================================
# AUTHENTICATION
# ============================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl"

# ============================================
# PAYMENT PROVIDERS
# ============================================
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Paystack
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY="pk_test_..."
PAYSTACK_SECRET_KEY="sk_test_..."

# ============================================
# EMAIL
# ============================================
RESEND_API_KEY="re_..."
EMAIL_FROM="hello@onedettydecember.com"

# ============================================
# ANALYTICS
# ============================================
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-..."
NEXT_PUBLIC_POSTHOG_KEY="phc_..."
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ============================================
# SENTRY (Error Tracking)
# ============================================
NEXT_PUBLIC_SENTRY_DSN="https://...@sentry.io/..."
SENTRY_AUTH_TOKEN="..."

# ============================================
# VERCEL (Deployment)
# ============================================
VERCEL_URL="auto-populated-by-vercel"
NEXT_PUBLIC_VERCEL_ENV="development"

# ============================================
# REDIS (Sprint 2 - Search Caching)
# ============================================
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# ============================================
# SEARCH & PERFORMANCE (Sprint 2)
# ============================================
ENABLE_SEARCH_CACHE="true"
SEARCH_CACHE_TTL="300"
AUTOCOMPLETE_CACHE_TTL="600"
MAX_SEARCH_RESULTS="100"
ENABLE_PERFORMANCE_MONITORING="true"

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_AI_PLANNER="false"
NEXT_PUBLIC_ENABLE_MARKETPLACE="false"
NEXT_PUBLIC_ENABLE_CAR_RENTALS="false"

