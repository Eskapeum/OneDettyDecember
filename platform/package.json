{
  "name": "platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "jest --coverage && open coverage/lcov-report/index.html",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "coverage:report": "node scripts/coverage-report.js",
    "test:report": "node scripts/generate-test-report.js",
    "test:report:open": "node scripts/generate-test-report.js && open reports/test-report-*.html",
    "load:smoke": "k6 run tests/load/smoke.test.js",
    "load:auth": "k6 run tests/load/auth.test.js",
    "load:packages": "k6 run tests/load/packages.test.js",
    "load:bookings": "k6 run tests/load/bookings.test.js",
    "load:stress": "k6 run tests/load/stress.test.js",
    "load:search": "k6 run tests/load/search-discovery.test.js",
    "load:all": "npm run load:smoke && npm run load:auth && npm run load:packages && npm run load:bookings",
    "load:sprint2": "npm run load:smoke && npm run load:search"
  },
  "dependencies": {
