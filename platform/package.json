{
  "name": "platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "jest --coverage && open coverage/lcov-report/index.html",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "coverage:report": "node scripts/coverage-report.js",
    "test:report": "node scripts/generate-test-report.js",
    "test:report:open": "node scripts/generate-test-report.js && open reports/test-report-*.html",
    "test:performance": "jest --testPathPatterns=performance",
    "test:performance:db": "jest --testPathPatterns=search-performance",
    "perf:monitor": "node scripts/performance-monitor.js",
    "perf:monitor:open": "node scripts/performance-monitor.js && open reports/performance/performance-report-*.html",
    "test:e2e:performance": "npx playwright test e2e/performance/",
    "test:lighthouse": "npx lighthouse-ci autorun",
    "test:seo": "npx playwright test e2e/seo/",
    "test:seo:meta": "npx playwright test e2e/seo/meta-tags-validation.spec.ts",
    "test:seo:structured": "npx playwright test e2e/seo/structured-data.spec.ts",
    "test:seo:sitemap": "npx playwright test e2e/seo/sitemap-validation.spec.ts",
    "seo:audit": "node scripts/seo-audit.js",
    "seo:audit:open": "node scripts/seo-audit.js && open reports/seo/seo-audit-*.html",
    "test:homepage": "jest --testPathPatterns=homepage",
    "test:homepage:unit": "jest --testPathPatterns=homepage/__tests__",
    "test:homepage:e2e": "npx playwright test e2e/homepage/",
    "test:homepage:all": "npm run test:homepage:unit && npm run test:homepage:e2e",
    "test:booking": "npx playwright test __tests__/e2e/booking-flow.test.ts",
    "test:booking:availability": "npx playwright test __tests__/e2e/availability.test.ts",
    "test:booking:api": "npx jest --testPathPatterns=booking-service",
    "test:booking:edge-cases": "npx playwright test __tests__/edge-cases/booking-edge-cases.test.ts",
    "test:booking:all": "npm run test:booking:api && npm run test:booking && npm run test:booking:availability && npm run test:booking:edge-cases",
    "load:smoke": "k6 run tests/load/smoke.test.js",
    "load:auth": "k6 run tests/load/auth.test.js",
    "load:packages": "k6 run tests/load/packages.test.js",
    "load:bookings": "k6 run tests/load/bookings.test.js",
    "load:stress": "k6 run tests/load/stress.test.js",
    "load:search": "k6 run tests/load/search-discovery.test.js",
    "load:all": "npm run load:smoke && npm run load:auth && npm run load:packages && npm run load:bookings",
    "load:sprint2": "npm run load:smoke && npm run load:search"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.19.0",
    "@stripe/react-stripe-js": "^5.4.0",
    "@stripe/stripe-js": "^8.5.2",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.81.1",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "ioredis": "^5.4.1",
    "lucide-react": "^0.554.0",
    "next": "16.0.3",
    "prisma": "^6.19.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.66.1",
    "stripe": "^20.0.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
